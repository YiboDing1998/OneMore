{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "@core/*": ["./src/core/*"],
      "@data/*": ["./src/data/*"],
      "@business-logic/*": ["./src/business-logic/*"],
      "@modules/*": ["./src/modules/*"],
      "@components/*": ["./components/*"],
      "@hooks/*": ["./hooks/*"],
      "@constants/*": ["./constants/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "tests",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
